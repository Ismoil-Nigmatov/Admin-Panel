@section Tabs{
	<div class="tabs">
		<a class="tab" data-tooltip="users" method="get" asp-controller="Course" asp-action="GetCourseList">
			Courses
		</a>
		<a class="tab" data-tooltip="adduser" method="get" asp-controller="Course" asp-action="AddCourse">
			Add Course
		</a>
		<a class="tab" data-tooltip="usercourse" method="get" asp-controller="Course" asp-action="GetCourseById">
			Edit Course
		</a>
		<a class="tab active" data-tooltip="userresult" method="get" asp-controller="Course" asp-action="DeleteCourse">
			Delete Course
		</a>
	</div>
}

<form class="user__course" method="post" action="@Url.Action("DeleteCourse", "Course")">
	<input type="text" name="id" placeholder="Course id" class="get__inptut" />
	<button class="confirm" type="submit">Delete</button>
</form>

