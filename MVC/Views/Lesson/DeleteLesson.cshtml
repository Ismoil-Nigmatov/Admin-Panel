@section Tabs {
	<div class="tabs">
		<a class="tab" data-tooltip="users" method="get" asp-controller="Lesson" asp-action="GetLessons">
			Lessons
		</a>
		<a class="tab" data-tooltip="adduser" method="get" asp-controller="Lesson" asp-action="AddLesson">
			Add Lesson
		</a>
		<a class="tab" data-tooltip="usercourse" method="get" asp-controller="Lesson" asp-action="UpdateLesson">
			Edit Lesson
		</a>
		<a class="tab active" data-tooltip="userresult" method="get" asp-controller="Lesson" asp-action="DeleteLesson">
			Delete Lesson
		</a>
	</div>
}


<form class="user__course" method="post" action="@Url.Action("DeleteLesson", "Lesson")">
	<input type="text" name="id" placeholder="Lesson id" class="get__inptut" />
	<button class="confirm" type="submit">Delete</button>
</form>