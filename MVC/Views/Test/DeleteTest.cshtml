@section Tabs{
	<div class="tabs">
		<a class="tab" data-tooltip="users" method="get" asp-controller="Test" asp-action="GetTests">
			Tests
		</a>
		<a class="tab" data-tooltip="adduser" method="get" asp-controller="Test" asp-action="AddTest">
			Add Test
		</a>
		<a class="tab" data-tooltip="usercourse" method="get" asp-controller="Test" asp-action="GetTestById">
			Edit Test
		</a>
		<a class="tab active" data-tooltip="userresult" method="get" asp-controller="Test" asp-action="DeleteTest">
			Delete Test
		</a>
	</div>
}

<form class="user__course" method="post" action="@Url.Action("DeleteCourse", "Course")">
	<input type="text" name="id" placeholder="Course id" class="get__inptut" />
	<button class="confirm" type="submit">Delete</button>
</form>


