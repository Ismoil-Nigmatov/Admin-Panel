
@model MVC.Entity.Teacher
@section Tabs{
	<div class="tabs">
		<a class="tab" data-tooltip="users" method="get" asp-controller="Teacher" asp-action="GetTeacherList">
			Teachers
		</a>
		<a class="tab" data-tooltip="adduser" method="get" asp-controller="Teacher" asp-action="GetTeacherAdd">
			Add Teacher
		</a>
		<a class="tab active" data-tooltip="usercourse" method="get" asp-controller="Teacher" asp-action="GetTeacherById">
			Edit Teacher
		</a>
		<a class="tab" data-tooltip="userresult" method="get" asp-controller="Teacher" asp-action="DeleteTeacher">
			Delete Teacher
		</a>
	</div>
}

<h2>Edit Teacher Information</h2>

<form action="@Url.Action("UpdateTeacher", "Teacher")" method="post">
	<input type="hidden" name="id" value="@Model.Id" />

	<div>
		<input class="input" type="text" id="Name" name="name" value="@Model.Name" />
	</div>

	<div>
		<input class="input" type="text" id="ImgUrl" name="imgUrl" value="@Model.ImageUrl" />
	</div>
	
	<div>
		<input class ="input" type="text" id="Type" name="type" value="@Model.Type" />
	</div>

	<div>
		<button type="submit" style="margin-top:20px" class="confirm">Update</button>
	</div>
</form>