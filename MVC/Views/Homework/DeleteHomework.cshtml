@section Tabs {
	<div class="tabs">
		<a class="tab" data-tooltip="users" method="get" asp-controller="Homework" asp-action="GetHomeworks">
			Homeworks
		</a>
		<a class="tab" data-tooltip="adduser" method="get" asp-controller="Homework" asp-action="AddHomework">
			Add Homework
		</a>
		<a class="tab" data-tooltip="usercourse" method="get" asp-controller="Homework" asp-action="UpdateHomework">
			Edit Homework
		</a>
		<a class="tab active" data-tooltip="userresult" method="get" asp-controller="Homework" asp-action="DeleteHomework">
			Delete Homework
		</a>
	</div>
}


<form class="user__course" method="post" action="@Url.Action("DeleteHomework", "Homework")">
	<input type="text" name="id" placeholder="Homework id" class="get__inptut" />
	<button class="confirm" type="submit">Delete</button>
</form>